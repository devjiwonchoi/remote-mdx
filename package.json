{
  "name": "remote-mdx",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bunchee",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "lint-fix": "prettier --write !pnpm-lock.yaml .",
    "prepublishOnly": "pnpm build -m"
  },
  "dependencies": {
    "@mdx-js/mdx": "^2.2.1",
    "@mdx-js/react": "^2.2.1",
    "vfile": "^5.3.0",
    "vfile-matter": "^3.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/babel__code-frame": "^7.0.6",
    "@types/jest": "^29.5.12",
    "@types/mdx": "^2.0.11",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^18.0.11",
    "bunchee": "^4.4.8",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.4.4",
    "unist-util-remove": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            },
            "baseUrl": "."
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "verbose": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "author": "Jiwon Choi",
  "repository": "https://github.com/devjiwonchoi/remote-mdx.git"
}
